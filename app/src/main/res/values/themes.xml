<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AppointmentTrackingSystem" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/brand</item>
        <item name="colorSecondary">@color/backgroundtint</item>


    </style>

    <style name="Theme.AppointmentTrackingSystem" parent="Base.Theme.AppointmentTrackingSystem" >


    </style>

    <!-- CustomDatePickerTheme adıyla bir tema tanımlıyoruz -->
    <style name="CustomDatePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="materialCalendarStyle">@style/CustomCalendarStyle</item>
    </style>

    <!-- CustomCalendarStyle, MaterialDatePicker'ın görünümünü değiştiren bir stil -->
    <style name="CustomCalendarStyle" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="android:background">@color/brand</item>
        <item name="android:textColor">@android:color/white</item> <!-- Yazı rengini beyaz yapıyoruz (isteğe bağlı) -->
    </style>
    <!-- Bilgi Modalı Görselleştirilmesi-->
    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/brand</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>